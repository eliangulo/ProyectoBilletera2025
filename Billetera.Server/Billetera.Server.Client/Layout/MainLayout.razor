@inherits LayoutComponentBase
@inject IAuthService authService
@inject NavigationManager Navigation
@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main>
        <div class="top-row px-4">
            @if (MostrarBotonesAuth())
            {
                @if (estaAutenticado)
                {
                   
                    <button class="btn btn-outline-danger btn-cerrar-sesion" @onclick="CerrarSesion">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                            <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                        </svg>
                        Cerrar Sesión
                    </button>
                }
                else
                {
                  
                    <a href="/login">Iniciar Sesión</a>
                    <a href="/registro">Registrarse</a>
                }
            }
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>

@code {
    private bool estaAutenticado = false;
    private string? rutaActual;

    protected override async Task OnInitializedAsync()
    {
        estaAutenticado = await authService.EstaAutenticado();
        rutaActual = Navigation.Uri;

        Navigation.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        rutaActual = e.Location;
        StateHasChanged();
    }

    private bool MostrarBotonesAuth()
    {
        if (string.IsNullOrEmpty(rutaActual))
            return true;

        var ruta = new Uri(rutaActual).AbsolutePath.ToLower();

        // NO mostrar botones login/registro
        return !ruta.Contains("/login") && !ruta.Contains("/registro");
    }

    private void CerrarSesion()
    {
        authService.Logout();
        Navigation.NavigateTo("/", forceLoad: true);
    }

    public void Dispose()
    {
        // Desuscribirse cuando se destruye el componente
        Navigation.LocationChanged -= OnLocationChanged;
    }
}