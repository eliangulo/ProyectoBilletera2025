@page "/billetera"
@namespace Billetera.Server.Client.Pages.Usuarios
@using global::Billetera.Shared.DTOS
@using global::Billetera.Servicio.ServiciosHttp
@using System.Text.Json
@inject IAuthService authService
@inject IHttpServicio http
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Mi Billetera</PageTitle>

<link href="css/billetera.css" rel="stylesheet" />

@if (!estaAutenticado)
{
    <p>Redirigiendo al login...</p>
}
else if (cargando)
{
    <div class="loading-container">
        <div class="spinner"></div>
        <p>Cargando tu billetera...</p>
    </div>
}
else if (billetera != null)
{
    <div class="billetera-container">
        <!-- Saludo y bienvenida -->
        <div class="saludo-section">
            <h2>¬°Hola, @usuarioActual?.Nombre!</h2>
            <p class="text-muted">Bienvenido a tu billetera digital</p>
        </div>

        <!-- Informaci√≥n de la billetera -->
        <div class="billetera-info">
            <p class="fecha-creacion">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M11 6.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1z" />
                    <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                </svg>
                Creada el: @billetera.FechaCreacion.ToString("dd/MM/yyyy")
            </p>
        </div>

        <!--CREAR TIPO DE CUENTA -->

        <div class="crear-tipo-cuenta-panel">
            <div class="modal-header">
                <h3>Agregar tipo de cuenta</h3>
            </div>

            <p class="text-muted mb-3">Selecciona la moneda que deseas habilitar.</p>

            <div class="mb-3">
                <label class="form-label">Moneda</label>
                <select class="form-select" @bind="monedaSeleccionadaId" disabled="@(!monedasDisponibles.Any())">
                    <option value="">Selecciona una moneda</option>
                    @foreach (var moneda in monedasDisponibles)
                    {
                        <option value="@moneda.Id">@moneda.TipoMoneda (@moneda.CodISO)</option>
                    }
                </select>
                @if (!monedasDisponibles.Any())
                {
                    <div class="alert alert-warning mt-3">
                        No hay monedas habilitadas por el administrador para crear nuevas cuentas.
                    </div>
                }
            </div>

            @if (!string.IsNullOrEmpty(mensajeCrearTipoCuenta))
            {
                <div class="alert alert-danger">@mensajeCrearTipoCuenta</div>
            }

            <div class="modal-actions">
                <button class="btn btn-primary"
                        @onclick="CrearTipoCuenta"
                        disabled="@(creandoTipoCuenta || monedaSeleccionadaId == null || !monedasDisponibles.Any())">
                    @(creandoTipoCuenta ? "Creando..." : "Crear tipo de cuenta")
                </button>
            </div>
        </div>



        <!-- Secci√≥n de Cuentas -->
        <div class="cuentas-section">
            <h3>Mis Cuentas</h3>
            <p class="text-muted mb-3">Selecciona una cuenta para realizar operaciones</p>

            @if (billetera?.Cuentas?.Any() == true)
            {
                @foreach (var cuenta in billetera.Cuentas)
                {
                    <div class="cuenta-item">
                        @if (tiposCuentasPorCuenta.ContainsKey(cuenta.Id) && tiposCuentasPorCuenta[cuenta.Id].Any())
                        {
                            <div class="tipos-cuenta-lista">
                                @foreach (var tipoCuenta in tiposCuentasPorCuenta[cuenta.Id])
                                {
                                    
                                    <div class="tipo-cuenta-card @(tipoCuentaSeleccionada?.Id == tipoCuenta.Id ? "seleccionada" : "")"
                                         @onclick="@(() => SeleccionarCuenta(tipoCuenta))">

                                        <!-- Check de selecci√≥n -->
                                        @if (tipoCuentaSeleccionada?.Id == tipoCuenta.Id)
                                        {
                                            <div class="check-seleccionado">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="white" viewBox="0 0 16 16">
                                                    <path d="M10.97 4.97a.75.75 0 0 1 1.07 1.05l-3.99 4.99a.75.75 0 0 1-1.08.02L4.324 8.384a.75.75 0 1 1 1.06-1.06l2.094 2.093 3.473-4.425a.267.267 0 0 1 .02-.022z" />
                                                </svg>
                                            </div>
                                        }

                                        <!-- Encabezado con √≠cono -->
                                        <div class="tipo-cuenta-header">
                                            <div class="tipo-cuenta-icon">
                                                @if (tipoCuenta.Moneda_Tipo == "ARS" || tipoCuenta.Moneda_Tipo == "Peso")
                                                {
                                                    <span>$</span>
                                                }
                                                else if (tipoCuenta.Moneda_Tipo == "USD" || tipoCuenta.Moneda_Tipo == "D√≥lar")
                                                {
                                                    <span>üíµ</span>
                                                }
                                                else if (tipoCuenta.Moneda_Tipo == "EUR" || tipoCuenta.Moneda_Tipo == "Euro")
                                                {
                                                    <span>‚Ç¨</span>
                                                }
                                                else
                                                {
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                                        <path d="M1 3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1H1zm7 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4z" />
                                                        <path d="M0 5a1 1 0 0 1 1-1h14a1 1 0 0 1 1 1v8a1 1 0 0 1-1 1H1a1 1 0 0 1-1-1V5zm3 0a2 2 0 0 1-2 2v4a2 2 0 0 1 2 2h10a2 2 0 0 1 2-2V7a2 2 0 0 1-2-2H3z" />
                                                    </svg>
                                                }
                                            </div>
                                            <strong>@tipoCuenta.TC_Nombre</strong>
                                        </div>

                                        <!-- Tipo de moneda -->
                                        <p class="moneda-tipo">@tipoCuenta.Moneda_Tipo</p>

                                        <!-- Saldo (UNA SOLA VEZ) -->
                                        <p class="saldo-cuenta">
                                            <strong>Saldo:</strong> $@tipoCuenta.Saldo.ToString("N2")
                                        </p>

                                        <!-- ALIAS -->
                                        <div class="alias-section" @onclick:stopPropagation="true">
                                            <AliasEditor TipoCuentaId="@tipoCuenta.Id"
                                                         AliasActual="@tipoCuenta.Alias"
                                                         OnAliasActualizado="CargarDatos" />
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No hay tipos de cuenta configurados</p>
                        }
                    </div>
                }
            }
            else
            {
                <div class="no-cuentas-simple">
                    <p>A√∫n no tienes cuentas</p>
                </div>
            }
        </div>

        <!-- Botones de Operaciones -->
        @if (tipoCuentaSeleccionada != null)
        {
            <div class="operaciones-section">
                <h4 class="mb-3">Operaciones disponibles</h4>
                <div class="botones-operaciones">
                    <button class="btn-operacion btn-deposito" @onclick="AbrirModalDeposito">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                        </svg>
                        Dep√≥sito
                    </button>

                    <button class="btn-operacion btn-extraccion" @onclick="AbrirModalExtraccion">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                            <path d="M4 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 4 8z" />
                        </svg>
                        Extracci√≥n
                    </button>

                    <button class="btn-operacion btn-transferencia" @onclick="AbrirModalTransferencia">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M0 3.5A.5.5 0 0 1 .5 3h15a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-2z" />
                            <path d="M0 8.5A.5.5 0 0 1 .5 8h15a.5.5 0 0 1 .5.5v5a.5.5 0 0 1-.5.5H.5a.5.5 0 0 1-.5-.5v-5z" />
                        </svg>
                        Transferencia
                    </button>

                    <button class="btn-operacion btn-compra" @onclick="AbrirModalCompra">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4z" />
                        </svg>
                        Compra
                    </button>
                </div>
            </div>
        }
        else
        {
            <div class="mensaje-seleccion">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
                </svg>
                <p>Selecciona una cuenta para ver las operaciones disponibles</p>
            </div>
        }
    </div>


    @if (mostrarModalCrearTipoCuenta)
    {
        <div class="modal-overlay" @onclick="CerrarModalCrearTipoCuenta">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>Agregar tipo de cuenta</h3>
                    <button class="btn-close-modal" @onclick="CerrarModalCrearTipoCuenta">‚úï</button>
                </div>

                <p class="text-muted mb-3">Selecciona la moneda que deseas habilitar. El saldo inicial ser√° $0 y el nombre ser√° "Caja de ahorro".</p>

                <div class="mb-3">
                    <label class="form-label">Moneda</label>
                    <select class="form-select" @bind="monedaSeleccionadaId" disabled="@(!monedasDisponibles.Any())">
                        <option value="">Selecciona una moneda</option>
                        @foreach (var moneda in monedasDisponibles)
                        {
                            <option value="@moneda.Id">@moneda.TipoMoneda (@moneda.CodISO)</option>
                        }
                    </select>
                    @if (!monedasDisponibles.Any())
                    {
                        <div class="alert alert-warning mt-3">
                            No hay monedas habilitadas por el administrador para crear nuevas cuentas.
                        </div>
                    }
                </div>

                @if (!string.IsNullOrEmpty(mensajeCrearTipoCuenta))
                {
                    <div class="alert alert-danger">@mensajeCrearTipoCuenta</div>
                }

                <div class="modal-actions">
                    <button class="btn btn-primary"
                            @onclick="CrearTipoCuenta"
                            disabled="@(creandoTipoCuenta || monedaSeleccionadaId == null || !monedasDisponibles.Any())">
                        @(creandoTipoCuenta ? "Creando..." : "Crear tipo de cuenta")
                    </button>
                    <button class="btn btn-outline-secondary" @onclick="CerrarModalCrearTipoCuenta">Cancelar</button>
                </div>
            </div>
        </div>
    }



    <!-- MODAL DEP√ìSITO -->
    @if (mostrarModalDeposito)
    {
        <div class="modal-overlay" @onclick="CerrarModalDeposito">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>üí∞ Realizar Dep√≥sito</h3>
                    <button class="btn-close-modal" @onclick="CerrarModalDeposito">‚úï</button>
                </div>

                <div class="cuenta-seleccionada-info">
                    <p><strong>Cuenta:</strong> @tipoCuentaSeleccionada?.TC_Nombre</p>
                    <p><strong>Moneda:</strong> @tipoCuentaSeleccionada?.Moneda_Tipo</p>
                    <p><strong>Saldo actual:</strong> $@tipoCuentaSeleccionada?.Saldo.ToString("N2")</p>
                </div>

                <EditForm Model="@movimientoForm" OnValidSubmit="RealizarDeposito">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Monto a depositar *</label>
                        <InputNumber @bind-Value="movimientoForm.Monto" class="form-control" placeholder="0.00" step="0.01" />
                        <ValidationMessage For="@(() => movimientoForm.Monto)" />
                    </div>

                    <div class="form-group">
                        <label>Descripci√≥n (opcional)</label>
                        <InputText @bind-Value="movimientoForm.Descripcion" class="form-control" placeholder="Ej: Dep√≥sito en cajero autom√°tico" />
                    </div>

                    @if (!string.IsNullOrEmpty(mensajeModal))
                    {
                        <div class="alert @(esExitoModal ? "alert-success" : "alert-danger")">
                            @mensajeModal
                        </div>
                    }

                    <div class="modal-actions">
                        <button type="button" class="btn btn-secondary" @onclick="CerrarModalDeposito">Cancelar</button>
                        <button type="submit" class="btn btn-success" disabled="@procesando">
                            @if (procesando)
                            {
                                <span>Procesando...</span>
                            }
                            else
                            {
                                <span>Confirmar Dep√≥sito</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    <!-- MODAL EXTRACCI√ìN -->
    @if (mostrarModalExtraccion)
    {
        <div class="modal-overlay" @onclick="CerrarModalExtraccion">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>üí∏ Realizar Extracci√≥n</h3>
                    <button class="btn-close-modal" @onclick="CerrarModalExtraccion">‚úï</button>
                </div>

                <div class="cuenta-seleccionada-info">
                    <p><strong>Cuenta:</strong> @tipoCuentaSeleccionada?.TC_Nombre</p>
                    <p><strong>Moneda:</strong> @tipoCuentaSeleccionada?.Moneda_Tipo</p>
                    <p><strong>Saldo actual:</strong> $@tipoCuentaSeleccionada?.Saldo.ToString("N2")</p>
                </div>

                <EditForm Model="@movimientoForm" OnValidSubmit="RealizarExtraccion">
                    <DataAnnotationsValidator />

                    <div class="form-group">
                        <label>Monto a extraer *</label>
                        <InputNumber @bind-Value="movimientoForm.Monto" class="form-control" placeholder="0.00" step="0.01" />
                        <ValidationMessage For="@(() => movimientoForm.Monto)" />
                        <small class="form-text text-muted">Saldo disponible: $@tipoCuentaSeleccionada?.Saldo.ToString("N2")</small>
                    </div>

                    <div class="form-group">
                        <label>Descripci√≥n (opcional)</label>
                        <InputText @bind-Value="movimientoForm.Descripcion" class="form-control" placeholder="Ej: Retiro en cajero autom√°tico" />
                    </div>

                    @if (!string.IsNullOrEmpty(mensajeModal))
                    {
                        <div class="alert @(esExitoModal ? "alert-success" : "alert-danger")">
                            @mensajeModal
                        </div>
                    }

                    <div class="modal-actions">
                        <button type="button" class="btn btn-secondary" @onclick="CerrarModalExtraccion">Cancelar</button>
                        <button type="submit" class="btn btn-danger" disabled="@procesando">
                            @if (procesando)
                            {
                                <span>Procesando...</span>
                            }
                            else
                            {
                                <span>Confirmar Extracci√≥n</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }

    <!-- MODAL TRANSFERENCIA -- NO ME ACUERDO QUIEN LO HIZO, PERO ESTE ES OTRO PARA QUE USE EL ALIAS -->
    @if (mostrarModalTransferencia)
    {
        <div class="modal-overlay" @onclick="CerrarModalTransferencia">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>üí≥ Realizar Transferencia</h3>
                    <button class="btn-close-modal" @onclick="CerrarModalTransferencia">‚úï</button>
                </div>

                <!-- Informaci√≥n de la cuenta ORIGEN (la que el usuario seleccion√≥) -->
                <div class="cuenta-seleccionada-info">
                    <p><strong>Cuenta origen:</strong> @tipoCuentaSeleccionada?.TC_Nombre</p>
                    <p><strong>Moneda:</strong> @tipoCuentaSeleccionada?.Moneda_Tipo</p>
                    <p><strong>Saldo actual:</strong> $@tipoCuentaSeleccionada?.Saldo.ToString("N2")</p>
                </div>

                <EditForm Model="@movimientoForm" OnValidSubmit="RealizarTransferencia">
                    <DataAnnotationsValidator />

                    <!-- CAMPO PARA BUSCAR POR ALIAS -->
                    <div class="form-group">
                        <label>Alias de la cuenta destino *</label>
                        <input type="text"
                               class="form-control"
                               @bind="aliasDestino"
                               @bind:event="oninput"
                               @onblur="BuscarCuentaPorAlias"
                               placeholder="Ej: Sergio.Algorry.USD"
                               maxlength="100" />
                        <small class="form-text text-muted">Ingresa el alias de la cuenta a la que deseas transferir</small>
                    </div>

                    <!-- INFORMACI√ìN DEL DESTINATARIO (se muestra cuando se encuentra la cuenta) -->
                    @if (!string.IsNullOrEmpty(nombreDestinatario))
                    {
                        <div class="info-destinatario-encontrado">
                            <div class="info-destinatario-texto">
                                <p><strong>‚úÖ Cuenta encontrada</strong></p>
                                <p><strong>Destinatario:</strong> @nombreDestinatario</p>
                                <p><strong>N¬∞ Cuenta:</strong> @numCuentaDestino</p>
                                <p><strong>Tipo:</strong> @tipoCuentaDestino (@monedaDestino)</p>
                            </div>
                        </div>
                    }

                    <!-- ERROR si no se encuentra la cuenta -->
                    @if (!string.IsNullOrEmpty(errorBusquedaAlias))
                    {
                        <div class="alert alert-danger">
                            ‚ùå @errorBusquedaAlias
                        </div>
                    }

                    <!-- Campo de MONTO -->
                    <div class="form-group">
                        <label>Monto a transferir *</label>
                        <InputNumber @bind-Value="movimientoForm.Monto" class="form-control" placeholder="0.00" step="0.01" />
                        <ValidationMessage For="@(() => movimientoForm.Monto)" />
                        <small class="form-text text-muted">Saldo disponible: $@tipoCuentaSeleccionada?.Saldo.ToString("N2")</small>
                    </div>

                    <!-- Campo de DESCRIPCI√ìN -->
                    <div class="form-group">
                        <label>Descripci√≥n (opcional)</label>
                        <InputText @bind-Value="movimientoForm.Descripcion" class="form-control" placeholder="Ej: Pago de servicios" />
                    </div>

                    <!-- Mensajes de √©xito/error del procesamiento -->
                    @if (!string.IsNullOrEmpty(mensajeModal))
                    {
                        <div class="alert @(esExitoModal ? "alert-success" : "alert-danger")">
                            @mensajeModal
                        </div>
                    }

                    <!-- Botones de ACCI√ìN -->
                    <div class="modal-actions">
                        <button type="button" class="btn btn-secondary" @onclick="CerrarModalTransferencia">
                            Cancelar
                        </button>

                        <!--El bot√≥n se DESHABILITA si NO hay una cuenta destino v√°lida -->
                        <button type="submit"
                                class="btn btn-primary"
                                disabled="@(procesando || !cuentaDestinoId.HasValue)">
                            @if (procesando)
                            {
                                <span>Procesando...</span>
                            }
                            else
                            {
                                <span>Confirmar Transferencia</span>
                            }
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    }


    <!-- MODAL COMPRA DE MONEDA -->
    @if (mostrarModalCompra)
    {
        <div class="modal-overlay" @onclick="CerrarModalCompra">
            <div class="modal-content" @onclick:stopPropagation="true">
                <div class="modal-header">
                    <h3>ü™ô Comprar Moneda</h3>
                    <button class="btn-close-modal" @onclick="CerrarModalCompra">‚úï</button>
                </div>

                <!-- Informaci√≥n de la cuenta ORIGEN (la que paga) -->
                <div class="cuenta-seleccionada-info">
                    <p><strong>Cuenta origen (pagas con):</strong> @tipoCuentaSeleccionada?.TC_Nombre</p>
                    <p><strong>Moneda:</strong> @tipoCuentaSeleccionada?.Moneda_Tipo</p>
                    <p><strong>Saldo actual:</strong> $@tipoCuentaSeleccionada?.Saldo.ToString("N2")</p>
                </div>

                <EditForm Model="@compraForm" OnValidSubmit="RealizarCompra">
                    <DataAnnotationsValidator />

                    <!-- SELECCI√ìN DE MONEDA A COMPRAR -->
                    <div class="form-group">
                        <label>Selecciona la moneda a comprar *</label>
                        <select class="form-control" @bind="monedaDestinoSeleccionadaId" @bind:after="OnMonedaDestinoSeleccionada">
                            <option value="0">-- Selecciona una moneda --</option>
                            @foreach (var tipoCuenta in monedasDisponiblesParaCompra)
                            {
                                <option value="@tipoCuenta.Id">@tipoCuenta.Moneda_Tipo - @tipoCuenta.TC_Nombre</option>
                            }
                        </select>
                        <small class="form-text text-muted">Estas son tus cuentas en otras monedas</small>
                    </div>

                    <!-- INFORMACI√ìN DE LA CUENTA DESTINO (cuando se selecciona) -->
                    @if (monedaDestinoSeleccionadaId > 0 && cuentaDestinoCompra != null)
                    {
                        <div class="info-destinatario-encontrado">
                            <div class="info-destinatario-texto">
                                <p><strong>‚úÖ Cuenta destino seleccionada</strong></p>
                                <p><strong>Tipo:</strong> @cuentaDestinoCompra.TC_Nombre</p>
                                <p><strong>Moneda:</strong> @cuentaDestinoCompra.Moneda_Tipo</p>
                                <p><strong>Saldo actual:</strong> $@cuentaDestinoCompra.Saldo.ToString("N2")</p>
                            </div>
                        </div>
                    }
                    <!-- Campo de MONTO -->
                    <div class="form-group">
