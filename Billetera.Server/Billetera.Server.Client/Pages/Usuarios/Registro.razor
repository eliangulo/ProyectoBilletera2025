</div>
</div>

@code {
    private UsuariosDTO.Registro usuario = new UsuariosDTO.Registro();
    private string ConfirmarPassword { get; set; } = string.Empty;
    private string TelefonoSinFormato { get; set; } = string.Empty;
    private string? Mensaje;
    private bool mostrarPassword = false;
    private bool mostrarConfirmar = false;

    private string tipoInputPassword => mostrarPassword ? "text" : "password";
    private string tipoInputConfirmar => mostrarConfirmar ? "text" : "password";

    private string CuilFormateado
    {
        get => usuario.CUIL ?? string.Empty;
        set
        {
            if (string.IsNullOrEmpty(value))
            {
                usuario.CUIL = string.Empty;
                return;
            }

            var soloNumeros = new string(value.Where(char.IsDigit).ToArray());
            if (soloNumeros.Length > 11)
                soloNumeros = soloNumeros.Substring(0, 11);

            if (soloNumeros.Length <= 2)
            {
                usuario.CUIL = soloNumeros;
            }
            else if (soloNumeros.Length <= 10)
            {
                usuario.CUIL = $"{soloNumeros.Substring(0, 2)}-{soloNumeros.Substring(2)}";
            }
            else
            {
                usuario.CUIL = $"{soloNumeros.Substring(0, 2)}-{soloNumeros.Substring(2, 8)}-{soloNumeros.Substring(10)}";
            }
        }
    }

    private bool EsCuilValido()
    {
        if (string.IsNullOrEmpty(usuario.CUIL))
            return false;

        var soloNumeros = new string(usuario.CUIL.Where(char.IsDigit).ToArray());
        return soloNumeros.Length == 11;
    }

    private string NombreFormateado
    {
        get => usuario.Nombre ?? string.Empty;
        set
        {
            if (string.IsNullOrWhiteSpace(value))
            {
                usuario.Nombre = string.Empty;
                return;
            }
            var soloLetras = new string(value.Where(c => char.IsLetter(c) || char.IsWhiteSpace(c)).ToArray());
            usuario.Nombre = CadaPalabra(soloLetras);
        }
    }

    private string ApellidoFormateado
    {
        get => usuario.Apellido ?? string.Empty;
        set
        {
            if (string.IsNullOrWhiteSpace(value))
            {
                usuario.Apellido = string.Empty;
                return;
            }
            var soloLetras = new string(value.Where(c => char.IsLetter(c) || char.IsWhiteSpace(c)).ToArray());
            usuario.Apellido = CadaPalabra(soloLetras);
        }
    }

    private string CadaPalabra(string texto)
    {
        if (string.IsNullOrEmpty(texto))
            return texto;

        var palabras = texto.ToLower().Split(' ');

        for (int i = 0; i < palabras.Length; i++)
        {
            if (!string.IsNullOrEmpty(palabras[i]))
            {
                palabras[i] = char.ToUpper(palabras[i][0]) + palabras[i].Substring(1);
            }
        }

        return string.Join(" ", palabras);
    }

    private string DomicilioFormateado
    {
        get => usuario.Domicilio ?? string.Empty;
        set
        {
            if (string.IsNullOrWhiteSpace(value))
            {
                usuario.Domicilio = string.Empty;
                return;
            }

            // Permitir solo letras, números y espacios (sin símbolos)
            var textoLimpio = new string(value.Where(c => char.IsLetterOrDigit(c) || char.IsWhiteSpace(c)).ToArray());

            if (string.IsNullOrEmpty(textoLimpio))
            {
                usuario.Domicilio = string.Empty;
                return;
            }
            usuario.Domicilio = CadaPalabra(textoLimpio);
        }
    }
    private bool EsFechaValida()
    {
        return usuario.FechaNacimiento != default(DateTime) &&
               usuario.FechaNacimiento < DateTime.Now;
    }

    private bool EsTelefonoValidoVisual()
    {
        if (string.IsNullOrEmpty(TelefonoSinFormato))
            return false;

        return TelefonoSinFormato.Length >= 10 && TelefonoSinFormato.Length <= 13;
    }

    private void OnTelefonoInput(ChangeEventArgs e)
    {
        var input = e.Value?.ToString() ?? string.Empty;
        TelefonoSinFormato = new string(input.Where(char.IsDigit).ToArray());
        if (TelefonoSinFormato.Length > 13)
            TelefonoSinFormato = TelefonoSinFormato.Substring(0, 13);
    }
    
    private string FormatearTelefonoSimple(string telefono)
    {
        if (string.IsNullOrEmpty(telefono) || telefono.Length < 10)
            return telefono;

        if (telefono.Length == 10)
            return $"{telefono.Substring(0, 2)} {telefono.Substring(2, 4)}-{telefono.Substring(6)}";

        if (telefono.Length == 11)
            return $"{telefono.Substring(0, 3)} {telefono.Substring(3, 4)}-{telefono.Substring(7)}";

        if (telefono.Length == 12)
            return $"{telefono.Substring(0, 4)} {telefono.Substring(4, 4)}-{telefono.Substring(8)}";

        // 13 dígitos
        return $"{telefono.Substring(0, 4)} {telefono.Substring(4, 5)}-{telefono.Substring(9)}";
    }
    private bool EsCorreoValido()
    {
        if (string.IsNullOrEmpty(usuario.Correo))
            return false;

        return usuario.Correo.Contains("@") && usuario.Correo.Contains(".");
    }

    private bool EsConfirmacionValida()
    {
        if (string.IsNullOrEmpty(ConfirmarPassword))
            return false;

        return usuario.Password == ConfirmarPassword && !string.IsNullOrEmpty(usuario.Password);
    }

    private void TogglePasswordVisibility()
    {
        mostrarPassword = !mostrarPassword;
    }

    private void ToggleConfirmarVisibility()
    {
        mostrarConfirmar = !mostrarConfirmar;
    }

    private bool ValidarFortalezaPassword(string password)
    {
        if (string.IsNullOrWhiteSpace(password))
        {
            Mensaje = "La contraseña no puede estar vacía.";
            return false;
        }

        if (password.Length < 8)
        {
            Mensaje = "La contraseña debe tener al menos 8 caracteres.";
            return false;
        }

        if (!password.Any(char.IsUpper))
        {
            Mensaje = "La contraseña debe contener al menos una letra mayúscula.";
            return false;
        }

        if (!password.Any(char.IsLower))
        {
            Mensaje = "La contraseña debe contener al menos una letra minúscula.";
            return false;
        }

        if (!password.Any(char.IsDigit))
        {
            Mensaje = "La contraseña debe contener al menos un número.";
            return false;
        }

        if (!password.Any(c => "@$!%*?&".Contains(c)))
        {
            Mensaje = "La contraseña debe contener al menos un carácter especial (@$!%*?&).";
            return false;
        }

        return true;
    }

    private async Task GrabarFormulario(EditContext editContext)
    {
        Console.WriteLine("Botón presionado - Iniciando validación");

        if (!ValidarFormulario())
        {
            Console.WriteLine("Validación fallida");
            return;
        }

        Console.WriteLine("Validación exitosa - Enviando datos");
        await Grabar();
    }

    private bool ValidarFormulario()
    {
        if (!EsCuilValido())
        {
            Mensaje = "El CUIL debe tener 11 dígitos.";
            return false;
        }

        if (!EsTelefonoValidoVisual())
        {
            Mensaje = "El teléfono debe tener entre 10 y 13 dígitos.";
            return false;
        }

        if (string.IsNullOrWhiteSpace(usuario.Nombre))
        {
            Mensaje = "El nombre es requerido.";
            return false;
        }

        if (string.IsNullOrWhiteSpace(usuario.Apellido))
        {
            Mensaje = "El apellido es requerido.";
            return false;
        }

        if (string.IsNullOrWhiteSpace(usuario.Domicilio))
        {
            Mensaje = "El domicilio es requerido.";
            return false;
        }

        if (!EsFechaValida())
        {
            Mensaje = "Debe ingresar una fecha de nacimiento válida.";
            return false;
        }

        if (!EsCorreoValido())
        {
            Mensaje = "Debe ingresar un correo electrónico válido.";
            return false;
        }

        if (string.IsNullOrEmpty(usuario.Password))
        {
            Mensaje = "La contraseña es requerida.";
            return false;
        }

        if (!ValidarFortalezaPassword(usuario.Password))
        {
            return false;
        }

        if (!EsConfirmacionValida())
        {
            Mensaje = "Las contraseñas no coinciden.";
            return false;
        }

        return true;
    }

    private async Task Grabar()
    {
        try
        {
            Console.WriteLine("Enviando datos al servidor...");
            usuario.Telefono = FormatearTelefonoSimple(TelefonoSinFormato);

            Console.WriteLine($"CUIL: '{usuario.CUIL}'");
            Console.WriteLine($"Teléfono: '{usuario.Telefono}'");

            var httpResp = await httpServicio.Post<UsuariosDTO.Registro, object>("api/usuarios/registro", usuario);

            if (!httpResp.Error)
            {
                Console.WriteLine("Registro exitoso, redirigiendo a login...");
                navHttp.NavigateTo("/login");
            }
            else
            {
                Console.WriteLine("Error del servidor");
                Mensaje = await ExtraerMensajeError(httpResp);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"EXCEPCIÓN: {ex.Message}");
            Mensaje = $"Ocurrió un error: {ex.Message}";
        }
    }

    private async Task<string> ExtraerMensajeError(HttpRespuesta<object> httpResp)
    {
        try
        {
            if (httpResp.HttpResponseMessage?.Content != null)
            {
                var contenido = await httpResp.HttpResponseMessage.Content.ReadAsStringAsync();

                if (!string.IsNullOrEmpty(contenido))
                {
                    if (contenido.Contains("mensaje"))
                    {
                        var inicio = contenido.IndexOf("\"mensaje\"");
                        if (inicio >= 0)
                        {
                            var inicioValor = contenido.IndexOf(":", inicio) + 1;
                            var finValor = contenido.IndexOf("\"", inicioValor + 2);
                            if (finValor > inicioValor)
                            {
                                var mensaje = contenido.Substring(inicioValor + 1, finValor - inicioValor - 1);
                                return mensaje.Trim('"');
                            }
                        }
                    }
                    return contenido;
                }
            }

            return "Error al registrar el usuario.";
        }
        catch
        {
            return "Error al registrar el usuario.";
        }
    }

