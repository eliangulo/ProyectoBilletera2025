@page "/registro"
@using System.Net.Http
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.AspNetCore.Components.WebAssembly.Http
@using Microsoft.JSInterop
@using System.Threading.Tasks
@using global::Billetera.Shared.DTOS

@inject IHttpServicio httpServicio
@inject NavigationManager navHttp

<link href="css/registro.css" rel="stylesheet" />

<div class="registration-body">
    <div class="registration-container">
        <div class="registration-logo">
            <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="currentColor" class="bi bi-person-plus-fill" viewBox="0 0 16 16" style="color: #0d6efd;">
                <path d="M1 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
            </svg>
        </div>

    <h3>Registrarse</h3>

    @if (!string.IsNullOrEmpty(Mensaje))
    {
        <div class="alert alert-danger">@Mensaje</div>
    }

    <EditForm Model="usuario" OnSubmit="GrabarFormulario" class="row g-3">
        <DataAnnotationsValidator />
        <div class="col-md-6">
            <label for="cuil" class="form-label">CUIL</label>
            <input type="text"
                   id="cuil"
                   class="form-control @(EsCuilValido() ? "is-valid" : (!string.IsNullOrEmpty(usuario.CUIL) ? "is-invalid" : ""))"
                   @bind="CuilFormateado"
                   @bind:event="oninput"
                   placeholder="XX-XXXXXXXX-X"
                   maxlength="13"
                   inputmode="numeric"
                   required />
            @if (EsCuilValido())
            {
                <div class="valid-feedback">¡CUIL válido!</div>
            }
            @if (!string.IsNullOrEmpty(usuario.CUIL) && !EsCuilValido())
            {
                <div class="invalid-feedback">El CUIL debe tener 11 dígitos.</div>
            }
        </div>

        <div class="col-md-6">
            <label for="telefono" class="form-label">Teléfono</label>
            <input type="text"
                   id="telefono"
                   class="form-control @(EsTelefonoValidoVisual() ? "is-valid" : (!string.IsNullOrEmpty(TelefonoSinFormato) ? "is-invalid" : ""))"
                   value="@TelefonoSinFormato"
                   @oninput="OnTelefonoInput"
                   placeholder="Ej: 35746387142"
                   maxlength="13"
                   inputmode="numeric"
                   onkeydown="return (event.keyCode >= 48 && event.keyCode <= 57) || (event.keyCode >= 96 && event.keyCode <= 105) || event.keyCode === 8 || event.keyCode === 46 || event.keyCode === 37 || event.keyCode === 39 || event.keyCode === 9"
                   onpaste="event.preventDefault(); let paste = (event.clipboardData || window.clipboardData).getData('text'); this.value = paste.replace(/\D/g, '').substring(0, 13); this.dispatchEvent(new Event('input', { bubbles: true }));"
                   required />
            @if (EsTelefonoValidoVisual())
            {
                <div class="valid-feedback">¡Teléfono válido!</div>
            }
            @if (!string.IsNullOrEmpty(TelefonoSinFormato) && !EsTelefonoValidoVisual())
            {
                <div class="invalid-feedback">El teléfono debe tener entre 10 y 13 dígitos.</div>
            }
        </div>

        <div class="col-md-6">
            <label for="nombre" class="form-label">Nombre</label>
            <input type="text"
                   id="nombre"
                   class="form-control @(!string.IsNullOrWhiteSpace(usuario.Nombre) ? "is-valid" : "")"
                   @bind="NombreFormateado"
                   @bind:event="oninput"
                   placeholder="Ingrese su nombre"
                   required />
            @if (!string.IsNullOrWhiteSpace(usuario.Nombre))
            {
                <div class="valid-feedback">¡Perfecto!</div>
            }
        </div>

        <div class="col-md-6">
            <label for="apellido" class="form-label">Apellido</label>
            <input type="text"
                   id="apellido"
                   class="form-control @(!string.IsNullOrWhiteSpace(usuario.Apellido) ? "is-valid" : "")"
                   @bind="ApellidoFormateado"
                   @bind:event="oninput"
                   placeholder="Ingrese su apellido"
                   required />
            @if (!string.IsNullOrWhiteSpace(usuario.Apellido))
            {
                <div class="valid-feedback">¡Perfecto!</div>
            }
        </div>

        <div class="col-md-6">
            <label for="domicilio" class="form-label">Domicilio</label>
            <input type="text"
                   id="domicilio"
                   class="form-control @(!string.IsNullOrWhiteSpace(usuario.Domicilio) ? "is-valid" : "")"
                   @bind="DomicilioFormateado"
                   @bind:event="oninput"
                   placeholder="Ej: San Martin 123"
                   required />
            @if (!string.IsNullOrWhiteSpace(usuario.Domicilio))
            {
                <div class="valid-feedback">¡Perfecto!</div>
            }
        </div>

        <div class="col-md-6">
            <label for="fechaNacimiento" class="form-label">Fecha de Nacimiento</label>
            <input type="date"
                   id="fechaNacimiento"
                   class="form-control @(EsFechaValida() ? "is-valid" : "")"
                   @bind="usuario.FechaNacimiento"
                   required />
            @if (EsFechaValida())
            {
                <div class="valid-feedback">¡Fecha válida!</div>
            }
        </div>

        <div class="col-12">
            <label for="correo" class="form-label">Correo Electrónico</label>
            <input type="email"
                   id="correo"
                   class="form-control @(EsCorreoValido() ? "is-valid" : (!string.IsNullOrEmpty(usuario.Correo) ? "is-invalid" : ""))"
                   @bind="usuario.Correo"
                   @bind:event="oninput"
                   placeholder="ejemplo@correo.com"
                   required />
            @if (EsCorreoValido())
            {
                <div class="valid-feedback">¡Correo válido!</div>
            }
            @if (!string.IsNullOrEmpty(usuario.Correo) && !EsCorreoValido())
            {
                <div class="invalid-feedback">Por favor ingrese un correo válido.</div>
            }
        </div>

        <div class="col-md-6">
            <label for="password" class="form-label">Contraseña</label>
            <div class="input-group has-validation">
                <input type="@tipoInputPassword"
                       id="password"
                       class="form-control"
                       @bind="usuario.Password"
                       @bind:event="oninput"
                       placeholder="Ingrese su contraseña"
                       required />
                <button class="btn btn-outline-secondary" type="button" @onclick="TogglePasswordVisibility">
                    @if (mostrarPassword)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
                            <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z"/>
                            <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>
                        </svg>
                    }
                </button>
            </div>
            @if (!string.IsNullOrEmpty(usuario.Password))
            {
                <div class="password-requirements">
                    <div class="@(usuario.Password.Length >= 8 ? "requirement-met" : "requirement-not-met")">
                        @(usuario.Password.Length >= 8 ? "✓" : "✗") Mínimo 8 caracteres
                    </div>
                    <div class="@(usuario.Password.Any(char.IsUpper) ? "requirement-met" : "requirement-not-met")">
                        @(usuario.Password.Any(char.IsUpper) ? "✓" : "✗") Una letra mayúscula
                    </div>
                    <div class="@(usuario.Password.Any(char.IsLower) ? "requirement-met" : "requirement-not-met")">
                        @(usuario.Password.Any(char.IsLower) ? "✓" : "✗") Una letra minúscula
                    </div>
                    <div class="@(usuario.Password.Any(char.IsDigit) ? "requirement-met" : "requirement-not-met")">
                        @(usuario.Password.Any(char.IsDigit) ? "✓" : "✗") Un número
                    </div>
                    <div class="@(usuario.Password.Any(c => "@$!%*?&".Contains(c)) ? "requirement-met" : "requirement-not-met")">
                        @(usuario.Password.Any(c => "@$!%*?&".Contains(c)) ? "✓" : "✗") Un carácter especial (@@$!%*?&)
                    </div>
                </div>
            }
        </div>

        <div class="col-md-6">
            <label for="confirmarPassword" class="form-label">Confirmar Contraseña</label>
            <div class="input-group has-validation">
                <input type="@tipoInputConfirmar"
                       id="confirmarPassword"
                       class="form-control @(EsConfirmacionValida() ? "is-valid" : (!string.IsNullOrEmpty(ConfirmarPassword) ? "is-invalid" : ""))"
                       @bind="ConfirmarPassword"
                       @bind:event="oninput"
                       placeholder="Confirme su contraseña"
                       required />
                <button class="btn btn-outline-secondary" type="button" @onclick="ToggleConfirmarVisibility">
                    @if (mostrarConfirmar)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                            <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                        </svg>
                    }
                    else
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                            <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
                            <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z"/>
                            <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>
                        </svg>
                    }
                </button>
            </div>
            @if (EsConfirmacionValida())
            {
                <div class="valid-feedback">¡Las contraseñas coinciden!</div>
            }
            @if (!string.IsNullOrEmpty(ConfirmarPassword) && !EsConfirmacionValida())
            {
                <div class="invalid-feedback">Las contraseñas no coinciden.</div>
            }
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Registrar</button>
            <button type="button" class="btn btn-secondary" @onclick="Cancelar">Cancelar</button>
        </div>
    </EditForm>
    
        <p class="text-muted mt-3">¿Ya tienes cuenta? <a href="/login">Inicia sesión aquí</a></p>
